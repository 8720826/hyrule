<div class="row">

	<div class="col-sm-2 col-md-2">

		<div class="card left-menu">
			<div class="card-header">
				分类索引
			</div>
			<ul class="list-group list-group-flush">
				{% for cate in Model.AllCategories %}
				<li class="list-group-item">
					<a href="{{ cate.Link }}" title="{{ cate.Name }}">{{ cate.Name }}</a>
				</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	<div class="col-sm-10 col-md-10">
		<div class="card right-content">
			<div class="card-header">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb  mb-0">
						<li class="breadcrumb-item">
							<a href="/">首页</a>
						</li>
						<li class="breadcrumb-item  active">
							<a href="/cate?id=1">{{ Model.Category.Name }}</a>
						</li>
					</ol>
				</nav>
			</div>
			<div class="card-body row">
				{% for article in Model.Articles %}
				<div class="col-xs-12 col-sm-6 col-md-4 float-start mb-3" >
					<a href="{{ article.Link }}" class="list-group-item list-group-item-action d-flex gap-3 py-3 article-info clearfix" aria-current="true">
						<img src="{{ article.CoverUrl }}" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0" style="margin: auto;" />
						<div class="d-flex gap-2 w-100 justify-content-between">
							<div class="text-truncate" style="padding-right:45px">
								<h6 class="mb-0 text-truncate">
									<b>{{ article.Title }}</b>
								</h6>
								<p class="mb-0 mt-2 opacity-75 text-truncate">{{ article.Summary }}</p>
							</div>
						</div>
					</a>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
	

</div>