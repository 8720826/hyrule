@page
@model Yes.Blog.Areas.Admin.Pages.User.AddModel
@{
}

<template x-data x-if="$store.errorMessage">
	<div class="alert alert-danger" x-show="$store.errorMessage" x-transition x-text="$store.errorMessage"></div>
</template>


<div class="header">
    <h1 class="page-title">
        添加管理员
    </h1>
    <ul class="breadcrumb">
        <li>
            <a asp-page="/Index">管理中心</a>
        </li>
        <li>
            <a asp-page="/User/Index">管理员列表</a>
        </li>
        <li class="active">添加管理员</li>
    </ul>

</div>


<div class="main-content" x-data="data">
	<div class="row">
		<div class="col-lg-12">
			<div class="row">
				<div class="col-lg-6">

                    <div class="form-group">
                        <label>用户名	</label>
                        <input type="text" x-model="user.name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>昵称</label>
                        <input type="text" x-model="user.nickName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>邮箱</label>
                        <input type="text" x-model="user.email" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>密码</label>
                        <input type="password" x-model="user.password" class="form-control">
                    </div>

					<div class="btn-toolbar list-toolbar">
						<button class="btn btn-primary" x-on:click="addUser">
							<i class="fa fa-save"></i> 添加管理员
						</button>
					</div>

				</div>
			</div>
		</div>
	</div>

	<partial name="_Footer" />
</div>

@section Scripts {
	<script src="~/admin/js/user/add.js" asp-append-version="true"></script>
}


