@page
@model Yes.Blog.Areas.Admin.Pages.Category.DetailModel
@{
}


<template x-data x-if="$store.errorMessage">
    <div class="alert alert-danger" x-show="$store.errorMessage" x-transition x-text="$store.errorMessage"></div>
</template>


<div class="header">


    <h1 class="page-title">
        编辑分类
    </h1>
    <ul class="breadcrumb">
        <li>
            <a asp-page="/Index">管理中心</a>
        </li>
        <li>
            <a asp-page="/Category/Index">文章分类</a>
        </li>
        <li class="active">编辑分类</li>
    </ul>

</div>


<div class="main-content" x-data="data">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">

                    <div class="form-group">
                        <label>分类名</label>
                        <input type="text" x-model="category.name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>缩略名</label>
                        <input type="text" x-model="category.slug" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>排序</label>
                        <input type="text" x-model="category.sort" class="form-control">
                    </div>


                    <div class="form-group">
                        <label>分类描述</label>
                        <textarea x-model="category.description" rows="3" class="form-control"></textarea>
                    </div>

                    <div class="btn-toolbar list-toolbar">
                        <button class="btn btn-primary" x-on:click="editCategory">
                            <i class="fa fa-save"></i> 编辑分类
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <partial name="_Footer" />
</div>


@section Scripts {
    <script src="~/admin/js/category/detail.js" asp-append-version="true"></script>
}