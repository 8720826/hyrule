<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Hyrule">
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" type="text/css" href="/admin/bootstrap/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/admin/font-awesome/css/font-awesome.min.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="/admin/css/theme.css" asp-append-version="true">
    <script src="/admin/js/alpine.min.js" defer asp-append-version="true"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="theme-blue">
    <div class="navbar navbar-default" role="navigation" x-data>
        <div class="navbar-header">
            <a asp-page="/Index" title="Hyrule">
                <span class="navbar-brand">
                    <img src="/admin/images/logo.png" class="logo" />
                <strong x-text=" '   ' + window.config.name"></strong>
            </span></a>

        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav  quick-start">
                <li>
                    <a href="/" target="_blank">查看站点  <span class="fa fa-external-link"></span></a>
                </li>
                <li>
                    <a asp-page="/Article/Add">写文章</a>
                </li>
                <li><a asp-page="/Page/Add">创建单页</a></li>
            </ul>
            <ul id="main-menu" class="nav navbar-nav navbar-right">
                <li class="dropdown hidden-xs">
                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user padding-right-small" style="position:relative;top: 3px;"></span> 你好，<span x-text="window.username"></span>
                        <i class="fa fa-caret-down"></i>
                    </a>

                    <ul class="dropdown-menu" x-data>
                        <li><a asp-page="/User/Profile">个人资料</a></li>
                        <li class="divider"></li>
                        <li><a asp-page="/User/Password">修改密码</a></li>
                        <li class="divider"></li>
                        <li><a href="javascript:;" x-on:click="logout">退出</a></li>
                    </ul>
                </li>
            </ul>

        </div>
    </div>


    <div class="sidebar-nav">

        <ul>
            <li>
                <a href="javascript:;" class="nav-header">
                    <i class="fa fa-fw fa-folder-o"></i> 内容管理
                </a>
            </li>
            <li>
                <ul class="dashboard-menu nav nav-list collapse in">
                    <li><a asp-page="/Article/Index"><span class="fa fa-bars"></span> 文章列表</a></li>
                    <li><a asp-page="/Category/Index"><span class="fa fa-sitemap"></span> 文章分类</a></li>
                    <li><a asp-page="/Page/Index"><span class="fa fa-file-text-o"></span> 单页面管理</a></li>
                    <li><a asp-page="/Comment/Index"><span class="fa fa-comment"></span> 评论管理</a></li>
                    <li><a asp-page="/Tag/Index"><span class="fa fa-tags"></span> 标签管理</a></li>
                </ul>
            </li>

            <li>
                <a href="javascript:;" class="nav-header">
                    <i class="fa fa-fw fa-cog"></i> 系统设置
                </a>
            </li>
            <li>
                <ul class="dashboard-menu nav nav-list collapse in">
                    <li><a asp-page="/Configuration/Index"><span class="fa fa-wrench"></span> 基本设置</a></li>
                    <li><a asp-page="/Theme/Index"><span class="fa fa-newspaper-o"></span> 模板设置</a></li>
                </ul>
            </li>

            <li><a href="javascript:;" class="nav-header"><i class="fa fa-fw fa-user-o"></i> 用户管理</a></li>
            <li>
                <ul class="dashboard-menu nav nav-list collapse in">
                    <li><a asp-page="/User/Index"><span class="fa fa-users"></span> 用户列表</a></li>
                    @*<li><a href="terms-and-conditions.html"><span class="fa fa-caret-right"></span> 操作记录</a></li>
                    <li><a href="terms-and-conditions.html"><span class="fa fa-caret-right"></span> 访问统计</a></li>*@
                </ul>
            </li>

        </ul>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="/admin/js/axios.min.js"></script>
    <script src="/admin/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>