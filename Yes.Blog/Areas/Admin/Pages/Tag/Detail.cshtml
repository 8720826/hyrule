@page
@model Yes.Blog.Areas.Admin.Pages.Tag.DetailModel
@{
}


<template x-data x-if="$store.errorMessage">
    <div class="alert alert-danger" x-show="$store.errorMessage" x-transition x-text="$store.errorMessage"></div>
</template>


<div class="header">


    <h1 class="page-title">
        编辑标签
    </h1>
    <ul class="breadcrumb">
        <li>
            <a asp-page="/Index">管理中心</a>
        </li>
        <li>
            <a asp-page="/Tag/Index">标签列表</a>
        </li>
        <li class="active">编辑标签</li>
    </ul>

</div>


<div class="main-content" x-data="data">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">

                    <div class="form-group">
                        <label>标签名</label>
                        <input type="text" x-model="tag.name" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>缩略名</label>
                        <input type="text" x-model="tag.slug" class="form-control">
                    </div>

                    <div class="btn-toolbar list-toolbar">
                        <button class="btn btn-primary" x-on:click="editTag">
                            <i class="fa fa-save"></i> 编辑标签
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <partial name="_Footer" />
</div>


@section Scripts {
    <script src="~/admin/js/tag/detail.js" asp-append-version="true"></script>
}